#version 460

layout(local_size_x = 64) in;

layout(binding = 0) buffer BufferAlpha {
    float a[];
};

layout(binding = 1) buffer BufferBeta {
    float b[];
};

layout(binding = 2) buffer BufferOutd {
    float outd[];
};

void main() {
    uint i = gl_GlobalInvocationID.x;
    outd[i] = a[i] * b[i] + 1.0;
}
